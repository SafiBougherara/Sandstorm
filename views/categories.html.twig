{% extends "base.html.twig" %}

{% block content %}
<div class="container py-5">
    <h1 class="mb-4">Browse Categories</h1>
    
    <div class="row g-4">
        {% for category in categories %}
        <div class="col-md-3">
            <a href="/Sandstorm/category/{{ category.slug }}" class="text-decoration-none">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi {{ category.icon }} fs-1 mb-3 text-primary"></i>
                        <h5 class="card-title">{{ category.name }}</h5>
                        <p class="text-muted">{{ category.count }} items</p>
                        {% if category.description %}
                        <p class="small text-muted">{{ category.description }}</p>
                        {% endif %}
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
